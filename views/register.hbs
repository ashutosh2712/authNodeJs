
    <div class="registerContainer">
        <h1>Registration</h1>
        <form action="/auth/register" method="post" class="formContainer">
            <div class="emailField">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="Enter Your Email"/>
            </div>
            <br>
            <div class="passwordField">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password"  placeholder="Enter Password">
            </div>
            <br>
            <button type="submit" value="Register" class="btn"> Submit </button>
        </form>
        <div class="signInGoogle"><a href="/auth/google">
            <img src="/images/google.png" alt="Google">
            Login With Google
        </a>
        </div>
        <div class="regLogToggle">Already have an Account? <a href="/auth/login">Login</a></div>
    </div>